{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "dist",
    "allowJs": true,
    "rootDir": ".",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  },
  "exclude": ["stories"],
  "include": ["src/**/*"]
}
